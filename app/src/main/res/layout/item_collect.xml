<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        android:elevation="20dp"
        android:layout_margin="10dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_item_collect_title"
                  android:paddingTop="10dp"
                  android:textColor="@color/black"
                  android:textSize="14sp"
                  android:text="000000"
                  android:paddingLeft="6dp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_item_collect_time"
                  android:padding="6dp"
                  android:textSize="12sp"
                  android:text="11111"
                  app:layout_constraintTop_toBottomOf="@+id/tv_item_collect_title"
                  app:layout_constraintStart_toStartOf="@id/tv_item_collect_title"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_item_collect_author"
                  android:textSize="12sp"
                  android:text="3333"
                  android:paddingBottom="10dp"
                  android:paddingStart="6dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_item_collect_time"
                  app:layout_constraintStart_toStartOf="@id/tv_item_collect_title"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/iv_item_collect"
                   android:src="@mipmap/history"
                   android:padding="10dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>